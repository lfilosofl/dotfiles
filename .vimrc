set nocompatible

filetype on
filetype plugin on
filetype indent on

syntax on
set number

set shiftwidth=4
set tabstop=4
set expandtab
set smarttab

set nowrap
set incsearch
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set history=100

set wildmenu
set wildmode=list:longest
set ruler

set autoindent
set smartindent

set exrc
set secure

set colorcolumn=120
highlight ColorColumn ctermbg=darkgray
